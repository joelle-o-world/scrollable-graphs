{
  "compilerOptions": {
      "outDir": "./lib",
      "declaration": true,
      "module": "es6",
      "target": "es6",
      "types": ["react", "node"],
      "noImplicitAny": true,
      "downlevelIteration": true,
      "jsx": "react",
      "strictNullChecks": true
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
